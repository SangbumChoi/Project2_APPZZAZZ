<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.ProjectActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="9dp"
        android:layout_height="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/camptonbolddemo"
        android:text="@string/project_title"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/done_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:fontFamily="@font/camptonmedium"
        android:text="@string/export"
        android:textAllCaps="false"
        android:textColor="#44FF9A"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/project_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/project_name" />

    <VideoView
        android:id="@+id/video_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        app:layout_constraintDimensionRatio="1.8:1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/project_play"
        android:layout_width="18dp"
        android:layout_height="17dp"
        android:layout_marginTop="18dp"
        android:background="#00FFFFFF"
        android:elevation="2dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/video_display" />

    <ImageButton
        android:id="@+id/project_next"
        android:layout_width="23dp"
        android:layout_height="13dp"
        android:layout_marginStart="51dp"
        android:background="#00FFFFFF"
        android:elevation="2dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@id/project_play"
        app:layout_constraintTop_toTopOf="@id/project_play"
        app:layout_constraintBottom_toBottomOf="@id/project_play"/>

    <ImageButton
        android:id="@+id/project_back"
        android:layout_width="23dp"
        android:layout_height="13dp"
        android:layout_marginEnd="52dp"
        android:background="#00FFFFFF"
        android:elevation="2dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@id/project_play"
        app:layout_constraintTop_toTopOf="@id/project_play"
        app:layout_constraintBottom_toBottomOf="@id/project_play"/>

</androidx.constraintlayout.widget.ConstraintLayout>