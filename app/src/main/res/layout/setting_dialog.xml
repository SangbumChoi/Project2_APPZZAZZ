<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="136dp"
    android:background="@drawable/dialog_background"
    tools:context=".utils.GoToSettingDialog">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/archivo_semibold"
        android:text="@string/setting_title"
        android:textColor="@color/ZZAZZWhite"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/script"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/archivo_regular"
        android:text="@string/setting_storage_script"
        android:textAlignment="center"
        android:textColor="#9fff"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:ignore="SmallSp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="40dp"
        android:background="#9fff"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/allow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:fontFamily="@font/archivo_semibold"
        android:text="@string/setting"
        android:textAllCaps="false"
        android:textColor="@color/PointColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>