<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="264dp"
    android:layout_height="165dp"
    android:background="@drawable/alertdialog_background">

    <TextView
        android:id="@+id/intro_alert_text"
        android:layout_width="238dp"
        android:layout_height="48dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="13dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:fontFamily="@font/camptonmedium"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <CheckBox
        android:id="@id/checkBox"
        android:layout_width="178dp"
        android:layout_height="16dp"
        android:layout_marginBottom="63dp"
        android:buttonTint="@color/White"
        android:fontFamily="@font/camptonmedium"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro_alert_text"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/intro_alert_button"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginBottom="28dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
