<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="264dp"
    android:layout_height="165dp"
    android:background="@drawable/alertdialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/intro_alert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:baselineAligned="false"
        android:fontFamily="@font/camptonmedium"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/intro_alert_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:buttonTint="@color/White"
        android:fontFamily="@font/camptonlightdemo"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/intro_alert_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@id/intro_alert_button"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginBottom="25dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/camptonbolddemo"
        android:text="Okay"
        android:textAlignment="center"
        android:textColor="@color/ZZAZZGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
