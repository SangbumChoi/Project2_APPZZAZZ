<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black">

    <FrameLayout
        android:id="@+id/videoViewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/trimmingContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_gravity="center"
            tools:foreground="@tools:sample/backgrounds/scenic[1]" />

        <ImageView
            android:id="@+id/playIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/play_indicator"
            app:srcCompat="@drawable/ic_video_play" />

    </FrameLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/trimmingContainer"
        android:layout_width="match_parent"
        android:layout_height="81.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.teamisland.zzazz.video_trimmer_library.view.RangeSeekBarView
            android:id="@+id/rangeSeekBarView"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="#3300ffff" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/trimmingContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoViewContainer">

        <Button
            android:id="@+id/frameMinus"
            android:layout_width="88dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/frame_move_button"
            android:fontFamily="@font/archivo"
            android:text="@string/one_frame_retreat"
            android:textColor="@color/btn_text"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/framePlus"
            android:layout_width="88dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/frame_move_button"
            android:fontFamily="@font/archivo"
            android:text="@string/one_frame_advance"
            android:textColor="@color/btn_text"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

