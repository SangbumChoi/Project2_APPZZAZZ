<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".ui.IntroActivity">

    <ImageButton
        android:id="@+id/take_video_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/take_video_from_gallery_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <ImageButton
        android:id="@+id/take_video_from_gallery_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/load"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/take_video_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="51dp"
        android:layout_height="19dp"
        android:layout_marginBottom="532dp"
        android:fontFamily="@font/camptonbolddemo"
        android:gravity="center"
        android:text="@string/select_video"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/take_video_from_gallery_button"
        app:layout_constraintStart_toStartOf="@+id/take_video_from_gallery_button"
        app:layout_constraintTop_toBottomOf="@+id/take_video_from_gallery_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="74dp"
        android:layout_height="19dp"
        android:layout_marginBottom="532dp"
        android:fontFamily="@font/camptonbolddemo"
        android:gravity="center"
        android:text="@string/take_video"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/take_video_button"
        app:layout_constraintStart_toStartOf="@+id/take_video_button"
        app:layout_constraintTop_toBottomOf="@+id/take_video_button" />

</androidx.constraintlayout.widget.ConstraintLayout>