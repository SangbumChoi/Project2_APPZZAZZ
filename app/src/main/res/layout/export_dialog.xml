<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="264dp"
    android:layout_height="239dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/export_text"
        android:layout_width="199dp"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/camptonmedium"
        android:text="@string/export_text"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/export_progress"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:indeterminateDrawable="@drawable/progress_ring" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/camptonbolddemo"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/export_dialog_button"
        android:layout_width="65dp"
        android:layout_height="19dp"
        android:layout_marginBottom="34dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/camptonbolddemo"
        android:text="@string/export_stop"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#44FF9A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>